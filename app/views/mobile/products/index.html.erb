<script type="text/javascript">

	$(function(){

		$(".active.tab_content").show();
		$(".nav_menu  li.menu_item").click(function(){
			$clicked = $(this);
			if ($clicked.css("active") != "1") {
				$(".active").removeClass("active");
				$(this).addClass("active");
				
				var idToLoad = $clicked.attr("target");
				$(".tab_content").hide();
				$("#"+idToLoad).show();
				
	  	}
		});
		
		
	});
	
</script>
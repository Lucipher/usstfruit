<%product = shopping_item.product%>
<div id="prodcut_<%=product.id%>" class="product">
	<div id="product_image_<%=product.id%>" class="product_image">
		<%=link_to [:mobile,product],:remote=>true,"data-ignore"=>"push" do%>
			<%=image_tag product.cover_url(:small) ,:class=>"product_cover"%>
		<%end%>
	</div>
	<div class="product_content">
		<h3><%=shopping_item.name%> X <%=shopping_item.quantity%> </h3>
		
		<div class="product_detail">
			<div class="product_price">
				<span class="price"><%=number_to_currency shopping_item.price,:unit=>"&yen"%></span><span class="unit">/<%=shopping_item.unit%></span> 
			</div>
			<div class="product_button pull-right">
				<span class="price">小计:<%=number_to_currency shopping_item.price,:unit=>"&yen"%></span>
			</div>
		</div>
	</div>
</div>


<%= content_for :title do %>
	订单详细信息 #<%=@shopping.id%>  
<% end %>

<%=render 'header_nav'%>

<div class=' box'>
	<div class='box-body'>
		<table class="table">
			<tr>
				<th>操作</th>
				<th>时间</th>
			</tr>
			
			<tr>
				<td>客户下单</td>
				<td><%=l @shopping.created_at if @shopping.created_at%></td>
			</tr>
			<tr>
				<td>确认配货</td>
				<td><%=l @shopping.confirmed_at if @shopping.confirmed_at%></td>
			</tr>
			<tr>
				<td>配送配送</td>
				<td><%=l @shopping.shipped_at if @shopping.shipped_at%></td>
			</tr>
			<tr>
				<td>完成订单</td>
				<td><%=l @shopping.closed_at if @shopping.closed_at%></td>
			</tr>
			<tr>
				<td>取消订单</td>
				<td><%=l @shopping.canceled_at if @shopping.canceled_at%></td>
			</tr>
		</table>
	</div>
</div>
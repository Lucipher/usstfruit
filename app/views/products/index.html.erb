
<style type="text/css"> 


	#box{
		height:100%;
		
	}
	.nav_side {
		background-color:#F7F7F7;
		width:25%;
		margin-top:-15px;
		height:100%;
		
		float:left; 
	}
	.nav_side .nav_menu{
		list-style-type:none;
		padding-left:0px;	
	}
	.nav_side .nav_menu li{
		height:30px;
		font-size:12px;
		text-align:center; 
		
	}
	.nav_side .nav_menu .active{
		background-color:red;
		color:white;
		
	}
	
	.nav_content .active{
		display: block;
	}
	.nav_content .tab_content{
		display: none;
	}
	
	/*product _list*/
	.product {
		height:50px;
	}
	.product .product_image{
		width:50px;
		float:left; 
	}
	
	.product .product_content h3{
	 font-size:16px;
	 color:grey;
	}
	
	.product .product_content .price{
	 color:red;
	 font-size:14px;
	}
	
	.product .product_content .product_price{
		float:left; 
		
	}
	.product .product_content span{
	 font-size:12px;
	}


	.product_button{
	 	font-size:20px;
		margin-right:20px;
		
	}
	.product_quantity{
		font-size:20px;
		display:inline;
	}
	.product_content{
	}
	.table-view-cell {
		padding-right:0px;
		padding-bottom:0px;
		
	}
	.red{
		color:red;
	}
	.grey{
		color:grey;
		
	}
	
	#contentbottom{
	 width:100%;
	 height:90px;
	 position:absolute;
	 bottom:0px;
	 background-color:red;
	 padding-left:30px;
	 padding-right:30px;
	 padding-top:5px;
	}
	
	#contentbottom span{
		color:white;
		font-size:14px;
	}
	#contentbottom .btn{
		background-color:white;
		font-size:12px;
		color:red;
	}

</style>


<div id="box">
	<div class="nav_side">
		<ul class="nav_menu">
			<li target="search" >
				<i class="fa fa-search fa-2x red"></i>
			</li>
    	
    	<li target="home" class="active menu_item">测试分类1</li>
      <li target="about" class="menu_item">测试分类2</li>
      <li target="contact" class="menu_item">测试分类3</li>
    </ul>
	</div>
	<div class="nav_content">			
		<div id="home" class=" active tab_content">
			<ul class="table-view">
			  <li class="table-view-cell">
					<%=render 'product_item'%>
			  </li>
			  <li class="table-view-cell">
					<%=render 'product_item'%>
			  </li>
			  <li class="table-view-cell">
					<%=render 'product_item'%>
			  </li>
			</ul>
		</div>
		
		<div id="about" class="tab_content">

			<ul class="table-view">
			  <li class="table-view-cell">
					<%=render 'product_item'%>
			  </li>
			  <li class="table-view-cell">
					<%=render 'product_item'%>
			  </li>
			  <li class="table-view-cell">
					<%=render 'product_item'%>
			  </li>
			</ul>
			
		</div>
		
		<div id="contact" class="tab_content">
			<p>This content is for contact.</p>
			
		</div>
	</div>
	
	
	<div id ="contentbottom">
		<span>已选 4</span>
		<span>总计 4</span>
		<button class="btn btn-outlined pull-right">选好了</button>
		
	</div>
</div>



<script type="text/javascript">

	$(function(){

		$(".active.tab_content").show();
		$(".nav_menu  li.menu_item").click(function(){
			$clicked = $(this);
			if ($clicked.css("active") != "1") {
				$(".active").removeClass("active");
				$(this).addClass("active");
				
				var idToLoad = $clicked.attr("target");
				$(".tab_content").hide();
				$("#"+idToLoad).show();
				
	  	}
		});
		
		
	});
	
</script>